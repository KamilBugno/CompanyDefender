@using CompanyDefender.Models;
@using CompanyDefender.Converters;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PersonMailViewModel

<!doctype html>
<html>
<head>
    <title>Mails viewer</title>

    <script type="text/javascript" src="~/Scripts/vis.js"></script>
    <link href="~/Scripts/vis-network.min.css" rel="stylesheet" type="text/css" />

    <style type="text/css">
        #mynetwork {
            width: 600px;
            height: 400px;
            border: 1px solid lightgray;
        }
    </style>
</head>
<body>

    <p>
        Mails viewer
    </p>

    <div id="mynetwork"></div>

    <script type="text/javascript">

        var persons = @JavaScriptConvert.SerializeObjectToJson(Model.PersonsMails);
        // create an array with nodes
        var nodes = new vis.DataSet(persons);

        var mails = @JavaScriptConvert.SerializeObjectToJson(Model.Mails);
        // create an array with edges
        var edges = new vis.DataSet(mails);

        // create a network
        var container = document.getElementById('mynetwork');
        var data = {
            nodes: nodes,
            edges: edges
        };
        var options = {};
        var network = new vis.Network(container, data, options);
    </script>


</body>
</html>
